    <ImageView
        android:id="@+id/mainlogo"
        android:layout_width="310dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/HeadingTxt"
        tools:ignore="ImageContrastCheck" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="149dp"
        android:layout_height="120dp"
        android:layout_below="@+id/mainlogo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="@color/Abtncolor"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardElevation="15px"
        android:onClick="FoodItemCategory">

        <ImageView
            android:id="@+id/btnFoodItemCategory"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_margin="10dp"
            android:src="@drawable/fooditemcategory" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="0dp"
            android:text="FOOD ITEM CATEGORY"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:paddingBottom="0px"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

<!--=========================================== =====================-->

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="149dp"
        android:layout_height="120dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/Abtncolor"
