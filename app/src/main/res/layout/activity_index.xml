        android:onClick="ViewCustomers">

        <ImageView
            android:id="@+id/btn4"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_margin="10dp"
            android:src="@drawable/customer2" />

        <TextView
